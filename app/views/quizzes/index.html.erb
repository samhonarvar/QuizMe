<h1>Quizzes</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th>Field</th>
      <th>Cat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <% @category = Category.find_by(quiz.category_id) %>
      <% @field = Field.find_by(quiz.field_id) %>
      <tr class="<%= cycle('quiz_line_odd', 'quiz_line_even') %>">
        <td><%= quiz.question %></td>
        <!-- <td><%= truncate(quiz.answer, :length => 100, :omission => "...", :escape =>  false) %></td> -->
        <td><%= quiz.answer %></td>
        <td><%= @field.name %></td>
        <td><%= @category.name %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Delete', quiz, method: :delete, data: { confirm: 'You Sure?' } %></td>
      </tr>
    <% end %>
  <tr>
    <td><%= link_to 'New Quiz', new_quiz_path %></td>
  </tr>
  </tbody>
</table>

<br>

