<p id="notice"><%= notice %></p>

<h1>Listing Quizzes</h1>

<table>
  <thead>
    <tr>
      <th>Field</th>
      <th>Cat</th>
      <th>Question</th>
      <th>Answer</th>
      <th>Last</th>
      <th>Was correct</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <% @category = Category.find_by(quiz.category_id) %>
      <% @field = Field.find_by(quiz.field_id) %>
      <tr>
        <td><%= @field.name %></td>
        <td><%= @category.name %></td>
        <td><%= quiz.question %></td>
        <td><%= quiz.answer %></td>
        <td><%= quiz.last %></td>
        <td><%= quiz.was_correct %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

