<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Field</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <% @fields = Field.all %>
      <tr>
        <td><%= category.name %></td>
        <td><%= @fields.find_by(category.field_id).name %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'You Sure?' } %></td>
      </tr>
    <% end %>
  <tr>
    <td><%= link_to 'New Category', new_category_path %></td>
  </tr>
  </tbody>
</table>

<br>


